<%= provide :title, t("static_page.user.title") %>
<h1><%= t "static_page.user.para1" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("form.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("form.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("form.pass") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("form.config") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("form.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
