<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_micro_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "micro.posted" %> <%= time_ago_in_words micropost.created_at %> <%= t "micro.ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t("micro.delete"), micropost, method: :delete, data: {confirm: t("micro.sure") } %>
    <% end %>
  </span>
</li>
